{
  "name": "@spark/components",
  "description": "Contains all components",
  "version": "0.1.0",
  "author": "design-system-team",
  "type": "module",
  "customElements": "dist/custom-elements.json",
  "scripts": {
    "build": "node esbuild.dev.js; npm run build:custom-element",
    "build:custom-element": "cem analyze --litelement --outdir dist",
    "build:prod": "node esbuild.prod.js; npm run build:custom-element",
    "build:watch": "node esbuild.watch.js",
    "build:storybook": "storybook build --output-dir storybook",
    "build:theme-switcher": "npm --prefix .storybook/addon/theme-switcher run build",
    "lint": "eslint --max-warnings 0 --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "start": "web-dev-server --open demo/",
    "start:watch": "web-dev-server --open demo/ --watch",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "lit": "^2.7.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.22.7",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@custom-elements-manifest/analyzer": "^0.8.4",
    "@open-wc/testing": "^3.1.6",
    "@percy/cli": "^1.26.3",
    "@percy/storybook": "^4.3.6",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-mdx-gfm": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/web-components": "^7.4.0",
    "@storybook/web-components-vite": "^7.4.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@web/dev-server": "^0.2.3",
    "cem-plugin-vs-code-custom-data-generator": "^1.4.1",
    "command-line-args": "^5.2.1",
    "comment-parser": "^1.3.1",
    "esbuild": "^0.18.20",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-lit-a11y": "^2.4.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-wc": "^1.4.0",
    "glob": "^10.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sinon": "^15.2.0",
    "storybook": "^7.4.0",
    "storybook-addon-pseudo-states": "2.1.0",
    "storybook-addon-spark-theme-switcher": "file:.storybook/addon/theme-switcher",
    "typescript": "^5.1.6",
    "user-agent-data-types": "^0.4.2"
  },
  "engines": {
    "npm": ">=8.0.0 <10.0.0",
    "node": ">=18.0.0 <19.0.0"
  }
}
